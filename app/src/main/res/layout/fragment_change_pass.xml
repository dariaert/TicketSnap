<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChangePassFragment"
    android:background="@color/beige" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/newPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frameLayoutNewPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_input_shadow" />

                <EditText
                    android:id="@+id/inputNewPass"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/custom_input"
                    android:fontFamily="@font/montserrat_alternates_regular"
                    android:gravity="left|center_vertical"
                    android:inputType="textEmailAddress"
                    android:paddingStart="47dp"
                    android:paddingEnd="20dp"
                    android:text="Новый пароль"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/dark_blue"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/newPassImg"
                    android:layout_width="15dp"
                    android:layout_height="17dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/password_star" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/repeatPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <FrameLayout
                android:id="@+id/frameLayoutRepeatPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_input_shadow" />

                <EditText
                    android:id="@+id/inputRepeatPass"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/custom_input"
                    android:fontFamily="@font/montserrat_alternates_regular"
                    android:gravity="left|center_vertical"
                    android:inputType="textEmailAddress"
                    android:paddingStart="47dp"
                    android:paddingEnd="20dp"
                    android:text="Повторите пароль"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/dark_blue"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/repeatPassImg"
                    android:layout_width="15dp"
                    android:layout_height="17dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/password_star" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nowPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <FrameLayout
                android:id="@+id/frameLayoutNowPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_input_shadow" />

                <EditText
                    android:id="@+id/inputNowPass"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/custom_input"
                    android:fontFamily="@font/montserrat_alternates_regular"
                    android:gravity="left|center_vertical"
                    android:inputType="textEmailAddress"
                    android:paddingStart="47dp"
                    android:paddingEnd="20dp"
                    android:text="Текущий пароль"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/dark_blue"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/nowPassImg"
                    android:layout_width="15dp"
                    android:layout_height="17dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/password_star" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changePass_btn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/custom_btn_stroke"
            android:text="Сменить пароль"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/montserrat_alternates_regular"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:textAllCaps="false"/>

    </LinearLayout>

</FrameLayout>